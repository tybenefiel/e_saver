<div class="container" id="white-box">

<div class="page-header">
  <h1>New Task</h1>
</div>

<%= form_tag(tasks_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :tip_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
    <%= select_tag :tip_id, options_from_collection_for_select(Tip.all, :id, :title), class: 'form-control' %>
    </div>
  </div>



  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Task", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

</div>
