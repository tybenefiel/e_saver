<div class="page-header">
  <h1>Editing Task #<%= @task.id %></h1>
</div>

<%= form_tag(task_url(@task), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :tip_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :tip_id, options_from_collection_for_select(Tip.all, :id, :title, @task.tip_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :to_do_list_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :to_do_list_id, @task.to_do_list_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Task", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
