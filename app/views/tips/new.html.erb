<div class="page-header">
  <h1>New Tip</h1>
</div>

<%= form_tag(tips_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :room, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :room, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :price, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :saving, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :saving, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Tip", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
