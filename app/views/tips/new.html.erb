<div class="page-header">
  <h1>Create a New Tip!</h1>
</div>

<h3>It's quick and easy! All you have to do is:
<ul>
<li>Describe your tip in the box below</li>
<li>Answer a few questions to the best of your ability</li>
<li>Submit your tip for the world to see</li>
<li>Receive a point every time someone uses your tip</li>
</ul>
</h3>

<% if @tip.errors.any? %>
    <% @tip.errors.full_messages.each do |message| %>
        <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            <%= message %>
        </div>
    <% end %>
<% end %>

<%= form_tag(tips_url, method: 'post', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, @tip.title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, @tip.description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :room, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :room, @tip.room, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :price, @tip.price, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :saving, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :saving, @tip.saving, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Tip", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
