<div class="page-header">
  <h1>Editing Tip #<%= @tip.id %></h1>
</div>

<%= form_tag(tip_url(@tip), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= select_tag :user_id, options_from_collection_for_select(User.all, :id, :name, @tip.user_id), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :title, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :title, @tip.title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :description, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :description, @tip.description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :room, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_field_tag :room, @tip.room, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :price, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :price, @tip.price, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :saving, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :saving, @tip.saving, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Tip", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
